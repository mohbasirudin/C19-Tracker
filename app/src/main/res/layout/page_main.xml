<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/page_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/main_lay_reload"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_round_small_bottom_primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_24dp"
                        android:layout_marginBottom="72dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_16dp"
                            android:layout_marginRight="@dimen/dimen_8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/main_update"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen_8dp"
                                android:layout_weight="1"
                                android:hint="Diperbarui pada"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/dimen_12sp" />

                            <ImageButton
                                android:id="@+id/main_btn_info"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/ripple_oval_primary"
                                android:src="@drawable/ic_info_white" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/main_kasus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dimen_16dp"
                            android:layout_marginTop="@dimen/dimen_32dp"
                            android:hint="0"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite"
                            android:textSize="40sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dimen_16dp"
                            android:text="@string/status_kasus"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/dimen_16sp" />

                    </LinearLayout>

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginTop="-36dp"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:background="@color/colorWhite"
                    app:cardCornerRadius="@dimen/dimen_8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dimen_8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/status_positif"
                                android:textAlignment="center"
                                android:textColor="@color/colorTextSecondary"
                                android:textSize="@dimen/dimen_12sp" />

                            <TextView
                                android:id="@+id/main_positif"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:hint="0"
                                android:maxLines="1"
                                android:textAlignment="center"
                                android:textColor="@color/colorRed"
                                android:textColorHint="@color/colorRed"
                                android:textSize="@dimen/dimen_16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/main_positif_new"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:hint="+0"
                                android:maxLines="1"
                                android:textAlignment="center"
                                android:textColor="@color/colorRed"
                                android:textColorHint="@color/colorRed"
                                android:textSize="@dimen/dimen_12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/status_sembuh"
                                android:textAlignment="center"
                                android:textColor="@color/colorTextSecondary"
                                android:textSize="@dimen/dimen_12sp" />

                            <TextView
                                android:id="@+id/main_sembuh"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:hint="0"
                                android:maxLines="1"
                                android:textAlignment="center"
                                android:textColor="@color/colorGreen"
                                android:textColorHint="@color/colorGreen"
                                android:textSize="@dimen/dimen_16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/status_mati"
                                android:textAlignment="center"
                                android:textColor="@color/colorTextSecondary"
                                android:textSize="@dimen/dimen_12sp" />

                            <TextView
                                android:id="@+id/main_mati"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:hint="0"
                                android:maxLines="1"
                                android:textAlignment="center"
                                android:textColor="@color/colorGrey"
                                android:textColorHint="@color/colorGrey"
                                android:textSize="@dimen/dimen_16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/main_mati_new"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:hint="+0"
                                android:maxLines="1"
                                android:textAlignment="center"
                                android:textColor="@color/colorGrey"
                                android:textColorHint="@color/colorGrey"
                                android:textSize="@dimen/dimen_12sp" />

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:background="@color/colorWhite"
                    app:cardCornerRadius="@dimen/dimen_8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dimen_16dp"
                            android:layout_marginTop="@dimen/dimen_12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Indonesia"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="@dimen/dimen_14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/main_ina_btn_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lihat Riwayat"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/dimen_14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            style="@style/line_grey"
                            android:layout_marginVertical="@dimen/dimen_12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dimen_16dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/status_kasus"
                                    android:textColor="@color/colorTextSecondary"
                                    android:textSize="@dimen/dimen_14sp" />

                                <TextView
                                    android:id="@+id/main_ina_persentase_kasus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/dimen_8dp"
                                    android:hint="(0% dari Global)"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textColorHint="@color/colorTextPrimary"
                                    android:textSize="@dimen/dimen_12sp" />

                                <TextView
                                    android:id="@+id/main_ina_kasus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="0"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textColorHint="@color/colorTextPrimary"
                                    android:textSize="@dimen/dimen_14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_12dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/status_positif"
                                    android:textColor="@color/colorTextSecondary"
                                    android:textSize="@dimen/dimen_14sp" />

                                <TextView
                                    android:id="@+id/main_ina_positif_new"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/dimen_8dp"
                                    android:hint="(+0)"
                                    android:textColor="@color/colorRed"
                                    android:textColorHint="@color/colorRed"
                                    android:textSize="@dimen/dimen_12sp" />

                                <TextView
                                    android:id="@+id/main_ina_positif"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="0"
                                    android:textColor="@color/colorRed"
                                    android:textColorHint="@color/colorRed"
                                    android:textSize="@dimen/dimen_14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_12dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dimen_8dp"
                                    android:layout_weight="1"
                                    android:text="@string/status_kritis"
                                    android:textColor="@color/colorTextSecondary"
                                    android:textSize="@dimen/dimen_14sp" />

                                <TextView
                                    android:id="@+id/main_ina_kritis"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="0"
                                    android:textColor="@color/colorYellow"
                                    android:textColorHint="@color/colorYellow"
                                    android:textSize="@dimen/dimen_14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_12dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/status_sembuh"
                                    android:textColor="@color/colorTextSecondary"
                                    android:textSize="@dimen/dimen_14sp" />

                                <TextView
                                    android:id="@+id/main_ina_persentase_sembuh"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/dimen_8dp"
                                    android:hint="(0%)"
                                    android:textColor="@color/colorGreen"
                                    android:textColorHint="@color/colorGreen"
                                    android:textSize="@dimen/dimen_12sp" />

                                <TextView
                                    android:id="@+id/main_ina_sembuh"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="0"
                                    android:textColor="@color/colorGreen"
                                    android:textColorHint="@color/colorGreen"
                                    android:textSize="@dimen/dimen_14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_12dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/status_mati"
                                    android:textColor="@color/colorTextSecondary"
                                    android:textSize="@dimen/dimen_14sp" />

                                <TextView
                                    android:id="@+id/main_ina_persentase_mati"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dimen_8dp"
                                    android:hint="(0%)"
                                    android:textColor="@color/colorGrey"
                                    android:textColorHint="@color/colorGrey"
                                    android:textSize="@dimen/dimen_12sp" />

                                <TextView
                                    android:id="@+id/main_ina_mati_new"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/dimen_8dp"
                                    android:hint="(+0)"
                                    android:textColor="@color/colorGrey"
                                    android:textColorHint="@color/colorGrey"
                                    android:textSize="@dimen/dimen_12sp" />

                                <TextView
                                    android:id="@+id/main_ina_mati"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="0"
                                    android:textColor="@color/colorGrey"
                                    android:textColorHint="@color/colorGrey"
                                    android:textSize="@dimen/dimen_14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_12dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dimen_8dp"
                                    android:layout_weight="1"
                                    android:text="@string/status_populasi"
                                    android:textColor="@color/colorTextSecondary"
                                    android:textSize="@dimen/dimen_14sp" />

                                <TextView
                                    android:id="@+id/main_ina_populasi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="0"
                                    android:textColor="@color/colorGrey"
                                    android:textColorHint="@color/colorGrey"
                                    android:textSize="@dimen/dimen_14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            style="@style/line_grey"
                            android:layout_marginTop="@dimen/dimen_12dp" />

                        <RelativeLayout
                            android:id="@+id/main_ina_btn_provinsi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginVertical="@dimen/dimen_12dp"
                                android:text="Lihat Provinsi"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/dimen_14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:background="@color/colorWhite"
                    app:cardCornerRadius="@dimen/dimen_8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:layout_marginVertical="@dimen/dimen_12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Negara Terinfeksi"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/dimen_14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/main_country_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="(0)"
                            android:textColor="@color/colorTextPrimary"
                            android:textColorHint="@color/colorTextPrimary"
                            android:textSize="@dimen/dimen_14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/main_recycleview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_8dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>